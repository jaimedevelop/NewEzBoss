rules_version = '2';

// Firebase Storage Security Rules
service firebase.storage {
  match /b/{bucket}/o {
    
    // Allow authenticated users to read and write to estimates folder
    match /estimates/{estimateId}/{allPaths=**} {
      allow read: if true; // Allow public read for client estimate viewing
      allow write: if request.auth != null; // Only authenticated users can write
    }
    
    // Allow authenticated users to read and write to their own user folder
    match /users/{userId}/{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Default: deny all other access
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
